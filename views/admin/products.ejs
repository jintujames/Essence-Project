    <script>
        // Function to handle product deletion with SweetAlert confirmation
        function deleteProduct(productId) {
            Swal.fire({
                title: 'Are you sure?',
                text: 'Do you want to delete this product?',
                icon: 'warning',
                showCancelButton: true,
                confirmButtonText: 'Yes, delete it!',
                cancelButtonText: 'No, cancel!',
            }).then((result) => {
                if (result.isConfirmed) {
                    // Perform the actual deletion here
                    // You can use an AJAX request to send the delete request to the server
    
                    // Example of deleting a product using AJAX
                    $.ajax({
                        url: '/admin/deleteProducts',  // Replace with your API endpoint
                        method: 'POST',
                        data: { id: productId }, // Replace with the actual data you need
                        success: function(response) {
                            // Handle success, e.g., show a success SweetAlert
                            Swal.fire('Deleted!', 'The product has been deleted.', 'success');
                            window.location.href = '/admin/products';
                            // You may also reload the product list or perform other actions here
                        },
                        error: function(error) {
                            // Handle errors, e.g., show an error SweetAlert
                            Swal.fire('Error!', 'An error occurred.', 'error');
                        }
                    });
                }
            });
        }
    </script>
    
