    const loadShop = async (req, res) => {

        try {
            const userData = await User.findById({_id:req.session.user_id})  
    
    
            const categoryId = req.query.id;
            const page = req.query.page || 1;
            const itemsPerPage = 6;
            const skip = (page - 1) * itemsPerPage;
            const sort = req.query.sort;
            const minPrice = req.query.minPrice;
            const maxPrice = req.query.maxPrice;
    
            const filter = { isDeleted: false };
          if (categoryId) {
              filter.Category = categoryId;
          }
    
        
        const totalProducts = await Products.countDocuments(filter);
        const totalPages = Math.ceil(totalProducts / itemsPerPage);
    
        let products;
            if (sort === '1') {
                products = await Products.find(filter)
                    .sort({ salePrice: 1 }) // 1 represents ascending order
                    .skip(skip)
                    .limit(itemsPerPage)
                    .exec();
            } else if (sort === '-1') {
                products = await Products.find(filter)
                    .sort({ salePrice: -1 }) // -1 represents descending order
                    .skip(skip)
                    .limit(itemsPerPage)
                    .exec();
            } else {
                products = await Products.find(filter)
                    .skip(skip)
                    .limit(itemsPerPage)
                    .exec();
            }
    
        console.log(products);
            const category = await Category.find({isDeleted: false});
    
            res.render('shop', {
                user: userData, product: products,
                Category: category, totalPages: totalPages,
                currentPage: page, categoryId: categoryId || '',
                page: req.query.page || 1, sort: sort || '',
                minPrice: minPrice || '', maxPrice: maxPrice || ''
            });        
            
        } catch (error) {
            console.log(error.message);
        }
    }








