    try {

        const userData = await User.findById(req.query.id);

        if (userData) {
            userData.isActive = !userData.isActive;
            await userData.save();
            res.redirect('/admin/users');
        }
    } catch (error) {
        console.log(error.message);
    }
}




module.exports = {
    loadUsers,
    searchUser,
    toggleController

}








