        const passwordStrengthMessage = document.getElementById('passwordStrengthMessage');
        passwordStrengthMessage.innerHTML = '(A-Z), (a-z), (/[!@#$%^&*+,.?), (0-9), and at least 8 characters.';
        passwordStrengthMessage.className = 'danger-text';
    }

    function clearPasswordInfo() {
        const passwordStrengthMessage = document.getElementById('passwordStrengthMessage');
        passwordStrengthMessage.innerHTML = '';
    }

