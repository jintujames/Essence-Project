<%- include('header') %>

<main class="main">
    <section class="mt-50 mb-50">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="mb-25">
                        <h4 class="text-center">Edit Address</h4>
                    </div>
                    <div>
                        <form action="/editAddress/<%= address._id %>" method="post" class="d-flex justify-content-center align-items-center min-vh-100">
                            <!-- Include CSRF token if required -->
                            <input type="hidden" name="addressId" value="<%= address._id %>">
                            <div class="col-lg-6">
                                <div class="card mb-2">
                                    <div class="card-body">
                                        <div class="mb-4">
                                            <label for="name" class="form-label">Name</label>
                                            <input type="text" name="name" id="name" value="<%- address.name %>">

                                        </div>
                        
                                        <div class="mb-4">
                                            <label for="address" class="form-label">Address</label>
                                            <input type="text" name="address" id="address" value="<%- address.address %>">

                                        </div>
                        
                                        <div class="row">
                                            <div class="col-md-6">
                                                <div class="mb-4">
                                                    <label class="form-label">District</label>
                                                    <input type="text" name="district" id="district" value="<%- address.district %>">

                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="mb-4">
                                                    <label class="form-label">City</label>
                                                    <input type="text" name="city" id="city" value="<%- address.city %>">

                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-6">
                                                <div class="mb-4">
                                                    <label class="form-label">Pincode</label>
                                                    <input type="text" name="pincode" id="pincode" value="<%- address.pincode %>">

                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="mb-4">
                                                    <label class="form-label">Phone</label>
                                                    <input type="text" name="phone" id="phone" value="<%- address.phone %>">

                                                </div>
                                            </div>
                                        </div>
                                        <button type="submit" class="btn btn-primary text-center">Submit</button>
                                    </div>
                                </div>
                            </div>
                        </form>
                        
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>

<%- include('footer') %>


